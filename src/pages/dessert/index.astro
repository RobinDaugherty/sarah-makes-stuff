import Layout from '../../layouts/Default.astro';
import PostPreviewCollectionGrid from '../../components/PostPreviewCollectionGrid.astro';
import { sortItemsByDateDesc } from '../../utils/data-utils';

const posts = (await getCollection('dessert')).sort(sortItemsByDateDesc);
---

<Layout pageTitle="Desserts">
	<PostPreviewCollectionGrid posts={posts} />
</Layout>
